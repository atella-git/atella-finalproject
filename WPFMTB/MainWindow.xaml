<Window x:Class="WPFMTB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMTB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="{Binding mountainbike.BrandName}"/>
        <TextBox Text="{Binding NewBike.BrandName, Mode=TwoWay}"/>
        <TextBlock Text="{Binding mountainbike.TireSize}"/>
        <TextBox Text="{Binding NewBike.TireSize, Mode=TwoWay}"/>
        <TextBlock Text="{Binding mountainbike.FrameMaterial}"/>
        <TextBox Text="{Binding NewBike.FrameMaterial, Mode=TwoWay}"/>
        <TextBlock Text="{Binding mountainbike.HasSuspension}"/>
        <TextBox Text="{Binding NewBike.HasSuspension, Mode=TwoWay}"/>
        <TextBlock Text="{Binding mountainbike.FrameSize}"/>
        <TextBox Text="{Binding NewBike.FrameSize, Mode=TwoWay}"/>
    </Grid>
</Window>
